---
import Header from '@/components/header/Header.astro';
import Banners from '@/components/banners/Banners.astro';
import Sidebar from '@/components/sidebar/Sidebar.astro';
import FeaturePosts from '@/components/cover-posts/FeaturePosts.astro';
import SList from '@/components/reps/SList.astro';
import Articles from '@/components/reps/ArticleReps.astro';
import ArticleProtect from '@/components/reps/ArticleProtect.astro';
import TagReps from '@/components/reps/TagReps.astro';
import Guestbook from '@/components/reps/Guestbook.astro';
import Paging from '@/components/reps/Paging.astro';
import Offcanvas from '@/components/sidebar/Offcanvas.astro';
import Footer from '@/components/footer/Footer.astro';
import '@/styles/global.css';
//import '@/z_tistory-preview/style.css';
---

<body
  id="[##_body_id_##]"
  class="bg-white text-black transition-colors duration-500 dark:bg-gray-800 dark:text-white"
>
  <s_t3>
    <Header />

    <Banners />

    <main class="flex grow gap-4 pt-16">
      <div class="w-xs top-0 flex hidden pb-4 lg:block">
        <Sidebar />
      </div>
      <article
        class="row relative mr-4 w-[calc(100vw-20rem-(var(--spacing)*16))] grow pt-2"
      >
        <s_cover_group>
          <s_cover_rep>
            <FeaturePosts />
          </s_cover_rep>
        </s_cover_group>
        <SList />
        <Articles />
        <ArticleProtect />
        <TagReps />
        <Guestbook />
        <Paging />
      </article>
    </main>
    <Offcanvas />
    <Footer />
  </s_t3>
  <!-- <script src=""></script> -->
  <!-- <script src="@/scripts/common.ts"></script> -->
</body>
