<s_rp_input_form>
  <div
    class="flex flex-col w-full border rounded-lg border-gray-200 dark:border-gray-700 p-2"
  >
    <div
      class="relative flex w-full flex-col gap-2 items-center justify-start border-b border-gray-200 dark:border-gray-700 p-2"
    >
      <s_rp_member class="flex w-full">
        <div
          class="relative inline-flex w-full items-center justify-start flex-row gap-4"
        >
          <s_rp_guest>
            <div
              class="relative inline-flex w-fit items-center justify-start flex-row gap-4"
            >
              <p class="flex flex-row mr-2 items-center">
                <input
                  type="text"
                  name="[##_rp_input_name_##]"
                  value="[##_guest_name_##]"
                  class="h-8 border focus:outline-none border-gray-300 dark:border-gray-600 rounded-full px-2 bg-gray-200 dark:bg-gray-600 text-gray-900 dark:text-gray-100"
                />
                <label for="name" class="ml-2"> : 이름 </label>
              </p>
              <p class="flex flex-row mr-2 items-center">
                <input
                  type="password"
                  name="[##_rp_input_password_##]"
                  value="[##_rp_password_##]"
                  class="h-8 border focus:outline-none border-gray-300 dark:border-gray-600 rounded-full px-2 bg-gray-200 dark:bg-gray-600 text-gray-900 dark:text-gray-100"
                />
                <label for="homepage" class="ml-2"> : 비밀번호 </label>
              </p>
            </div>
          </s_rp_guest>
          <p class="flex flex-row mr-2 items-center">
            <input
              type="checkbox"
              name="[##_rp_input_is_secret_##]"
              class="checkbox"
            />
            <label for="secret" class="ml-2"> 비밀글 </label>
          </p>
        </div>
      </s_rp_member>
    </div>
    <div class="flex flex-row w-full items-center justify-start gap-2 mt-2">
      <p
        class="flex-col flex-1 w-full h-24 bg-gray-200 dark:bg-gray-600 px-2 border border-gray-200 dark:border-gray-700 rounded-lg"
      >
        <textarea
          name="[##_rp_input_comment_##]"
          rows="10"
          cols="50"
          class="w-full h-24 focus:outline-none"></textarea>
      </p>
      <p>
        <input
          type="submit"
          value="댓글 달기"
          onclick=`[##_rp_onclick_submit_##]`
          class="h-8 px-4 bg-blue-500 text-white rounded-full hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50"
        />
      </p>
    </div>
  </div>
</s_rp_input_form>
