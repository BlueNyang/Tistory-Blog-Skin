---
import OtherHero from '@/components/banners/OtherHero.astro';
import LongCard from '@/components/cards/LongCard.astro';
import TagBadge from '@/components/sidebar/TagBadge.astro';
import ArticleNav from './ArticleNav.astro';
---

<s_article_rep>
  <s_permalink_article_rep>
    <OtherHero
      title="[##_article_rep_title_##]"
      desc="[##_article_rep_category_##]"
      imgSrc="[##_article_rep_thumbnail_url_##]"
    />
    <div class="relative flex w-full flex-col gap-4">
      <span
        class="flex w-full border-b border-gray-200 pb-2 pt-2 text-sm text-gray-600 dark:border-gray-700 dark:text-gray-500"
      >
        <p class="w-full pr-2 text-right">[##_article_rep_date_##]</p>
      </span>
    </div>

    <div class="mb-8 flex">
      <div class="article-view flex-3" id="article-view">
        [##_article_rep_desc_##]
      </div>
      <ArticleNav />
    </div>

    <div id="article-footer" class="flex w-full flex-col items-center">
      <s_tag_label>
        <div
          class="mb-[46px] flex w-full flex-col border-b-2 border-gray-200 pb-[43px] dark:border-gray-700"
        >
          <h3 class="mr-[30px] w-full pt-4">Tags</h3>
          <div id="article-tag-box" class="font-[0]">[##_tag_label_rep_##]</div>
        </div>
      </s_tag_label>

      <LongCard title="'[##_article_rep_category_##]'의 다른글">
        <svg
          slot="icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          class="mb-2 ml-2 mr-1 mt-1 fill-gray-800 transition-colors duration-500 dark:fill-white"
          viewBox="0 0 24 24"
        >
          <path
            d="M14 5C13.4477 5 13 4.55228 13 4C13 3.44772 13.4477 3 14 3H20C20.5523 3 21 3.44772 21 4V10C21 10.5523 20.5523 11 20 11C19.4477 11 19 10.5523 19 10V6.41421L11.7071 13.7071C11.3166 14.0976 10.6834 14.0976 10.2929 13.7071C9.90237 13.3166 9.90237 12.6834 10.2929 12.2929L17.5858 5H14ZM5 7C4.44772 7 4 7.44772 4 8V19C4 19.5523 4.44772 20 5 20H16C16.5523 20 17 19.5523 17 19V14.4375C17 13.8852 17.4477 13.4375 18 13.4375C18.5523 13.4375 19 13.8852 19 14.4375V19C19 20.6569 17.6569 22 16 22H5C3.34315 22 2 20.6569 2 19V8C2 6.34315 3.34315 5 5 5H9.5625C10.1148 5 10.5625 5.44772 10.5625 6C10.5625 6.55228 10.1148 7 9.5625 7H5Z"
          ></path>
        </svg>
        <div class="flex flex-col gap-4 p-6">
          <s_article_prev>
            <div
              class="group relative rounded-lg border-l-4 border-transparent pl-2 transition-all duration-200 hover:-translate-y-1 hover:border-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700"
            >
              <a
                href="[##_article_prev_link_##]"
                class="block py-4 pr-4 no-underline"
              >
                <div class="flex flex-row items-center gap-4">
                  <div class="mb-2 h-2 w-2 shrink rounded-full bg-sky-500">
                  </div>
                  <h3
                    class="mb-2 line-clamp-2 truncate text-lg font-medium leading-tight text-gray-900 transition-colors duration-200 group-hover:text-purple-700 dark:text-gray-100 dark:group-hover:text-indigo-300"
                  >
                    [##_article_prev_title_##]
                  </h3>
                </div>
                <div class="flex items-center gap-2 pl-4">
                  <TagBadge name="[##_article_rep_category_##]" />
                </div>
              </a>
            </div>
          </s_article_prev>
          <div
            class="relative rounded-lg border-l-4 border-emerald-400 bg-gray-50 pl-2 transition-all duration-200 dark:bg-gray-700"
          >
            <div class="block py-4 pr-4 no-underline">
              <div class="flex flex-row items-center gap-4">
                <div class="mb-2 h-2 w-2 shrink rounded-full bg-green-500">
                </div>
                <h3
                  class="mb-2 line-clamp-2 truncate text-lg font-medium leading-tight text-teal-700 transition-colors duration-200 dark:text-gray-100"
                >
                  [##_article_rep_title_##]
                </h3>
              </div>
              <div class="flex items-center gap-2 pl-4">
                <TagBadge name="[##_article_rep_category_##]" />
              </div>
            </div>
          </div>
          <s_article_prev>
            <div
              class="group relative rounded-lg border-l-4 border-transparent pl-2 transition-all duration-200 hover:-translate-y-1 hover:border-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700"
            >
              <a
                href="[##_article_next_link_##]"
                class="block py-4 pr-4 no-underline"
              >
                <div class="flex flex-row items-center gap-4">
                  <div class="mb-2 h-2 w-2 shrink rounded-full bg-sky-500">
                  </div>
                  <h3
                    class="mb-2 line-clamp-2 truncate text-lg font-medium leading-tight text-gray-900 transition-colors duration-200 group-hover:text-purple-700 dark:text-gray-100 dark:group-hover:text-indigo-300"
                  >
                    [##_article_next_title_##]
                  </h3>
                </div>
                <div class="flex items-center gap-2 pl-4">
                  <TagBadge name="[##_article_rep_category_##]" />
                </div>
              </a>
            </div>
          </s_article_prev>
        </div>
      </LongCard>

      <s_article_related>
        <LongCard title="관련글">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            class="m-2 fill-gray-800 transition-colors duration-500 dark:fill-white"
            viewBox="0 0 32 32"
          >
            <path
              d="M27 21.75c-0.795 0.004-1.538 0.229-2.169 0.616l0.018-0.010-2.694-2.449c0.724-1.105 1.154-2.459 1.154-3.913 0-1.572-0.503-3.027-1.358-4.212l0.015 0.021 3.062-3.062c0.57 0.316 1.249 0.503 1.971 0.508h0.002c2.347 0 4.25-1.903 4.25-4.25s-1.903-4.25-4.25-4.25c-2.347 0-4.25 1.903-4.25 4.25v0c0.005 0.724 0.193 1.403 0.519 1.995l-0.011-0.022-3.062 3.062c-1.147-0.84-2.587-1.344-4.144-1.344-0.868 0-1.699 0.157-2.467 0.443l0.049-0.016-0.644-1.17c0.726-0.757 1.173-1.787 1.173-2.921 0-2.332-1.891-4.223-4.223-4.223s-4.223 1.891-4.223 4.223c0 2.332 1.891 4.223 4.223 4.223 0.306 0 0.605-0.033 0.893-0.095l-0.028 0.005 0.642 1.166c-1.685 1.315-2.758 3.345-2.758 5.627 0 0.605 0.076 1.193 0.218 1.754l-0.011-0.049-0.667 0.283c-0.78-0.904-1.927-1.474-3.207-1.474-2.334 0-4.226 1.892-4.226 4.226s1.892 4.226 4.226 4.226c2.334 0 4.226-1.892 4.226-4.226 0-0.008-0-0.017-0-0.025v0.001c-0.008-0.159-0.023-0.307-0.046-0.451l0.003 0.024 0.667-0.283c1.303 2.026 3.547 3.349 6.1 3.349 1.703 0 3.268-0.589 4.503-1.574l-0.015 0.011 2.702 2.455c-0.258 0.526-0.41 1.144-0.414 1.797v0.001c0 2.347 1.903 4.25 4.25 4.25s4.25-1.903 4.25-4.25c0-2.347-1.903-4.25-4.25-4.25v0zM8.19 5c0-0.966 0.784-1.75 1.75-1.75s1.75 0.784 1.75 1.75c0 0.966-0.784 1.75-1.75 1.75v0c-0.966-0.001-1.749-0.784-1.75-1.75v-0zM5 22.42c-0.966-0.001-1.748-0.783-1.748-1.749s0.783-1.749 1.749-1.749c0.966 0 1.748 0.782 1.749 1.748v0c-0.001 0.966-0.784 1.749-1.75 1.75h-0zM27 3.25c0.966 0 1.75 0.784 1.75 1.75s-0.784 1.75-1.75 1.75c-0.966 0-1.75-0.784-1.75-1.75v0c0.001-0.966 0.784-1.749 1.75-1.75h0zM11.19 16c0-0.001 0-0.002 0-0.003 0-2.655 2.152-4.807 4.807-4.807 1.328 0 2.53 0.539 3.4 1.409l0.001 0.001 0.001 0.001c0.87 0.87 1.407 2.072 1.407 3.399 0 2.656-2.153 4.808-4.808 4.808s-4.808-2.153-4.808-4.808c0-0 0-0 0-0v0zM27 27.75c-0.966 0-1.75-0.784-1.75-1.75s0.784-1.75 1.75-1.75c0.966 0 1.75 0.784 1.75 1.75v0c-0.001 0.966-0.784 1.749-1.75 1.75h-0z"
            ></path>
          </svg>
          <div class="relative w-full rounded-lg p-4">
            <div
              class="[&::-webkit-overflow-scrolling]:touch flex flex-row overflow-x-auto [&::-webkit-scrollbar-thumb]:rounded-full [&::-webkit-scrollbar-thumb]:bg-gray-300 dark:[&::-webkit-scrollbar-thumb]:bg-gray-700 [&::-webkit-scrollbar-track]:bg-transparent [&::-webkit-scrollbar]:h-2"
            >
              <s_article_related_rep>
                <div
                  class="w-50 group relative rounded-2xl border-b-4 border-transparent transition-all duration-200 hover:-translate-y-1 hover:border-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700"
                >
                  <a
                    href="[##_article_related_rep_link_##]"
                    class="mx-4 block p-2 transition-all duration-500 hover:text-purple-700 dark:hover:text-indigo-300"
                  >
                    <span
                      class="bg-position-center mb-4 block h-32 w-full rounded-xl bg-gradient-to-t from-black/50 to-transparent bg-no-repeat"
                    >
                      <s_article_related_rep_thumbnail>
                        <img
                          alt=""
                          src="[##_article_related_rep_thumbnail_link_##]"
                          class="rounded-lg object-cover"
                        />
                      </s_article_related_rep_thumbnail>
                    </span>
                    <div class="flex flex-row items-center gap-4">
                      <h3
                        class="mb-2 line-clamp-2 truncate text-lg font-medium leading-tight text-gray-900 transition-colors duration-200 group-hover:text-purple-700 dark:text-gray-100 dark:group-hover:text-indigo-300"
                      >
                        [##_article_next_title_##]
                      </h3>
                    </div>
                    <span
                      class="trucate text-gray-900 transition-colors duration-200 dark:text-gray-100"
                    >
                      [##_article_related_rep_date_##]
                    </span>
                  </a>
                </div>
              </s_article_related_rep>
            </div>
          </div>
        </LongCard>
      </s_article_related>

      <div
        class="gray-200 mb-20 w-full rounded-lg border p-4 text-black dark:border-gray-700 dark:text-white"
      >
        <s_rp> [##_comment_group_##] </s_rp>
      </div>
    </div>
  </s_permalink_article_rep>
</s_article_rep>
